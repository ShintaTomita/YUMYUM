<div class="account login">
  <div class="form">
    <div class="form-title">
      <h2>ログイン</h2>
    </div>
    <div class="form-contents">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="contents">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "メールアドレスを入力してください"%>
        </div>

        <div class="contents">
          <%= f.label "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", :placeholder => "パスワードを入力してください" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="submit">
          <%= f.submit "ログイン" %>
          <%= link_to "シェフ専用ログインページ", new_chef_session_path %>
        </div>

      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
