<div class="posts">
  <div class="posts-title">
    <h2>購入者の声</h2>
  </div>
  <div class="post-contents">
    <% posts.each do |post| %>
    <div class="post">
      <div class="profile-logo">
        <%= link_to "/yumyum/users/profile/#{post.user.id}" do %>
          <% if post.user.image.present? %>
            <%= image_tag post.user.image.thumb50.url %>
          <% else %>
            <%= image_tag "usericon.png" %>
          <% end %>
        <% end %>
      </div>
      <div class="post-text">
        <p><%= post.content %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
