<div class="top">
  <div class="top-title">
    <h2>レシピ</h2>
  </div>
  <div class="chefs-list">
  <% @recipes.each do |recipe| %>
      <div class="chefs-contents">
        <%= link_to "/yumyum/recipes/detail/#{recipe.id}" do %>
        <div class="chef-logo">
          <% if recipe.main_image? %>
            <%= image_tag recipe.main_image.thumb.url, class: "recipe-logo" %>
          <% else %>
            <%= image_tag "usericon.png" %>
          <% end %>
        </div>
        <div class="chef-info">
          <div class="details">
            <p class="hoge">料理名：</p>
            <p><%= recipe.name %></p>
          </div>
          <div class="details">
            <p class="hoge">ジャンル：</p>
            <p><#%= recipe.genre</p>
          </div>
          <div class="details">
            <p class="hoge">価格：</p>
            <p><#%= recipe.price</p>
          </div>
        </div>
        <% end %>
      </div>
  <% end %>
  </div>
</div>
